generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Book {
  id              String   @id @default(cuid())
  title           String
  author          String
  isbn            String?  @unique
  cover           String?
  description     String?
  category        String?
  totalCopies     Int      @default(1)
  availableCopies Int      @default(1)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  loans           Loan[]
}

model Loan {
  id         String    @id @default(cuid())
  bookId     String
  book       Book      @relation(fields: [bookId], references: [id])
  userId     String
  userName   String
  userEmail  String
  borrowedAt DateTime  @default(now())
  dueDate    DateTime
  returnedAt DateTime?

  @@index([userId])
  @@index([bookId])
}
